---
permalink: /syndicate.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ metadata.title }} - Syndication Feed</title>
    <link>{{ metadata.url }}</link>
    <description>{{ metadata.description }} - Curated content for syndication</description>
    <language>{{ metadata.language }}</language>
    <atom:link href="{{ metadata.url }}/syndicate.xml" rel="self" type="application/rss+xml"/>
    <lastBuildDate>{{ collections.syndicatable | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    {%- for post in collections.syndicatable | head(20) %}
    {%- set postUrl = metadata.url + post.url %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ postUrl }}</link>
      <guid isPermaLink="true">{{ postUrl }}</guid>
      <pubDate>{{ post.date | dateToRfc822MT }}</pubDate>
      {%- if post.data.description or post.data.summary %}
      <description>{{ post.data.description or post.data.summary }}</description>
      {%- endif %}
      {%- if post.data.img %}
      <enclosure url="{{ metadata.url }}{{ post.data.img | toWebp }}" type="image/webp"/>
      {%- endif %}
      <content:encoded><![CDATA[{{ post.templateContent | removeSubstackMarker | absoluteUrls | safe }}]]></content:encoded>
    </item>
    {%- endfor %}
  </channel>
</rss>
