---
permalink: /substack.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ metadata.title }} - Substack Feed</title>
    <link>{{ metadata.url }}</link>
    <description>{{ metadata.description }} - Excerpt feed for Substack</description>
    <language>{{ metadata.language }}</language>
    <atom:link href="{{ metadata.url }}/substack.xml" rel="self" type="application/rss+xml"/>
    <lastBuildDate>{{ collections.syndicatableForSubstack | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    {%- for post in collections.syndicatableForSubstack | head(20) %}
    {%- set postUrl = metadata.url + post.url %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ postUrl }}</link>
      <guid isPermaLink="true">{{ postUrl }}</guid>
      <pubDate>{{ post.date | dateToRfc822MT }}</pubDate>
      {%- if post.data.description or post.data.summary %}
      <description>{{ post.data.description or post.data.summary }}</description>
      {%- endif %}
      <content:encoded><![CDATA[
        {{ post.templateContent | substackExcerpt | absoluteUrls | safe }}
        <hr>
        <p><strong><a href="{{ postUrl }}">Continue reading on the Dust Wave website â†’</a></strong></p>
      ]]></content:encoded>
    </item>
    {%- endfor %}
  </channel>
</rss>
