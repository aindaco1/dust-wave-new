---
permalink: /feed/index.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ metadata.title }}</title>
    <link>{{ metadata.url }}</link>
    <atom:link href="{{ metadata.url }}/feed/" rel="self" type="application/rss+xml"/>
    <description>{{ metadata.description }}</description>
    <language>{{ metadata.language }}</language>
    <lastBuildDate>{{ collections.syndicatableForSubstack | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    {%- for post in collections.syndicatableForSubstack | head(20) %}
    {%- set postUrl = metadata.url + post.url %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ postUrl }}</link>
      <description><![CDATA[{{ post.templateContent | substackExcerpt | cleanHtmlForFeed | absoluteUrls | safe }}]]></description>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      <dc:creator>{{ metadata.author }}</dc:creator>
      <guid>{{ postUrl }}</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>
